---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2)
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
// href={`/pokemon/${id}`}
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    `flex flex-col items-center justify-center rounded mt-5`, 
    {
      border: !isBig
    }
  ]}
>
  <img 
    transition:name={`${name}-image`}
    src={imageSrc} 
    alt={`${name} sprite`}
    class:list={[
      {
        "w-80 h-80": isBig,
        "w-28 h-28": !isBig
      }
    ]}
  >

  <span class:list={[
    "capitalize",
    {
      "text-4xl": isBig
    }
    ]}
  >#{id} - {name}</span>
</a>